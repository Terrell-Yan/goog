<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
  <LinearLayout
    android:visibility="visible"
    android:id="@+id/trial_lin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:background="@drawable/code_shape"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:gravity="center" >
            <TextView
                android:textSize="15sp"
                android:textColor="#222"
                android:gravity="center"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginLeft="3dp"
                android:background="@null"
                android:text="请输入试用期提示码" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#222" />

        <EditText
            android:id="@+id/trial_etfind"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:background="@null"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/code_shape"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:gravity="center" >
            <TextView
                android:textSize="15sp"
                android:textColor="#222"
                android:gravity="center"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginLeft="3dp"
                android:background="@null"
                android:text="请输入试用期天数（0表示解除试用期）" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#222" />

        <EditText
            android:id="@+id/trial_ettime"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/code_shape"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:gravity="center" >
            <TextView
                android:textSize="15sp"
                android:textColor="#222"
                android:gravity="center"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginLeft="3dp"
                android:background="@null"
                android:text="请输入解锁密码（推荐仅用数字）" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#222" />

        <EditText
            android:inputType="number"
            android:id="@+id/trial_etpass"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/trial_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/login_but"
            android:text="生成试用期设置码" />
    </LinearLayout>
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:id="@+id/trial_lin2"
            android:visibility="gone"
            >

            <TextView
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:textSize="22sp"
                android:text="新试用期设置码"
                android:textColor="#222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/code_shape"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center" >
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:gravity="center"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:background="@null"
                        android:text="硬件号" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#222" />

                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/red2"
                    android:gravity="center"
                    android:id="@+id/trial_etyingjian"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="3dp"
                    android:background="@null"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/code_shape"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center" >
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:gravity="center"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:background="@null"
                        android:text="提示码" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#222" />

                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/red2"
                    android:gravity="center"
                    android:id="@+id/trial_etfind2"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="3dp"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/code_shape"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center" >
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:background="@null"
                        android:text="试用期天数" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#222" />

                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/red2"
                    android:gravity="center"
                    android:id="@+id/trial_ettime2"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="3dp"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/code_shape"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center" >
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:background="@null"
                        android:text="解锁密码" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#222" />

                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/red2"
                    android:gravity="center"
                    android:inputType="number"
                    android:id="@+id/trial_etpass2"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="3dp"
                    android:background="@null"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/code_shape"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center" >
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#222"
                        android:gravity="center"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="3dp"
                        android:background="@null"
                        android:text="试用期设置码" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#222" />

                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/red2"
                    android:gravity="center"
                    android:id="@+id/trial_etshezhi"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="3dp"
                    android:background="@null"
                    />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
