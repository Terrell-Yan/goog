<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:gravity="center"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="让   精  彩填  满 生活   !"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/edit_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/edit_book" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发段子"
                android:textColor="#222" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">

            <ImageView

                android:layout_width="80dp"

                android:layout_height="80dp"
                android:src="@drawable/edit_img" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发图片"
                android:textColor="#222" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">

            <ImageView


                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/edit_list" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发语音"
                android:textColor="#222" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/edit_iv4"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/edit_vido" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发视频"
                android:textColor="#222" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_iv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">

            <ImageView

                android:layout_width="80dp"

                android:layout_height="80dp"
                android:src="@drawable/edit_http" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发链接"
                android:textColor="#222" />
        </LinearLayout>


        <ImageView


            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp" />
    </LinearLayout>
</LinearLayout>
