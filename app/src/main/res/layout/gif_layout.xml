<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <include layout="@layout/gif_layout1" ></include>
<RelativeLayout
    android:visibility="visible"
    android:id="@+id/gif_lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/gif_iv"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gif_iv"
        android:background="@drawable/login_colour"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gif_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="肩部环绕"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="4dp"
                android:src="@mipmap/icon_collect" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="4dp"
                android:src="@mipmap/icon_share_w" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <View

                android:layout_width="340dp"
                android:layout_height="1dp"
                android:background="#515050"></View>
        </LinearLayout>

        <TextView
            android:id="@+id/gif_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingLeft="25dp"
            android:text="要点"
            android:textColor="#b4afaf"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gif_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="30dp"
            android:text="·    双手拇指点在肩上，挺直后背"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gif_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="30dp"
            android:text="·    活动肩胛骨，最大幅度环绕"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gif_top2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingLeft="25dp"
            android:text="呼吸"
            android:textColor="#b4afaf"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gif_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="30dp"
            android:text="·    全称保持均匀呼吸"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gif_top3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingLeft="25dp"
            android:text="动作感觉"
            android:textColor="#b4afaf"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gif_tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="30dp"
            android:text="·    肩关节有舒展开的感觉"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#0e7458"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/music_icon" />

        <TextView

            android:id="@+id/gif_tv5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="开始第一次动作训练"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"

            android:gravity="center"

            android:text="GO!"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>