<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_calendar"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/common_calendar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/common_calendar_title_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一"
            android:textSize="@dimen/common_calendar_title_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="二"
            android:textSize="@dimen/common_calendar_title_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="三"
            android:textSize="@dimen/common_calendar_title_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="四"
            android:textSize="@dimen/common_calendar_title_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="五"
            android:textSize="@dimen/common_calendar_title_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="六"
            android:textSize="@dimen/common_calendar_title_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_calendar_content"
        android:layout_marginTop="@dimen/common_calendar_top_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_calendar_content_height"
        android:orientation="vertical" >

        <include layout="@layout/include_badge_horizontal" />

        <include layout="@layout/include_badge_horizontal" />

        <include layout="@layout/include_badge_horizontal" />

        <include layout="@layout/include_badge_horizontal" />

        <include layout="@layout/include_badge_horizontal" />

        <include layout="@layout/include_badge_horizontal" />
    </LinearLayout>

</LinearLayout>