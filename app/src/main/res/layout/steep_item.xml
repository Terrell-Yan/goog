<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"
    android:paddingLeft="34dp"
    android:paddingRight="36dp">


    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/steep_avatar"
        android:layout_width="37dp"
        android:layout_height="37dp"

        />
    <LinearLayout
        android:gravity="center"
        android:layout_alignTop="@+id/steep_avatar"
        android:layout_alignBottom="@+id/steep_avatar"
        android:layout_toRightOf="@+id/steep_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:textSize="12sp"
            android:id="@+id/steep_nickname"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:textColor="#919191"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/steep_nickname"
            android:id="@+id/steep_rank"
            android:layout_toRightOf="@+id/steep_avatar"
            android:text="ff aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/steep_score"
        android:textColor="#487cb5"
        android:textSize="27sp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
