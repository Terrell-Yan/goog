<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_colour"

        android:orientation="vertical">

        <include layout="@layout/in_layout"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_colour"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/ruilogo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/longin_tv">

                <EditText
                    android:id="@+id/activity_register_name"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:hint="  请输入账号" />

                <ImageView
                    android:id="@+id/regis_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/username" />

            </RelativeLayout>
<View
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"></View>
            <RelativeLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/longin_tv">

                <EditText
                    android:id="@+id/activity_register_password"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:hint="  请输入密码" />

                <ImageView

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"

                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/password" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/longin_tv"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/activity_register_nextpass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="  请输入获取的验证码" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="#222" />

                <TextView
                    android:id="@+id/activity_register_obtain"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/text_shape"
                    android:gravity="center"
                    android:text="获取" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/activity_register_rediserbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_but"
                    android:gravity="center"
                    android:text="立即注册"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>