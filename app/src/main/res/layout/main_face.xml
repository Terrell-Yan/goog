<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <include layout="@layout/content_main"></include>
    <com.example.goog.view.MystoponthViewpager
       android:layout_weight="1"
        android:id="@+id/main_face_view"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </com.example.goog.view.MystoponthViewpager>

<LinearLayout
    android:gravity="center"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/main_face_lin"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="55dp">
        <ImageView
            android:src="@drawable/bmw_backhome"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:textColor="#2298e7"
            android:gravity="center"
            android:textSize="12sp"
            android:text="精华"
            android:layout_width="45dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_face_lin2"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/bmw_exam"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:textColor="#2298e7"
            android:gravity="center"
            android:textSize="12sp"
            android:text="附近"
            android:layout_width="45dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_face_lin3"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/plus"
            android:layout_width="45dp"
            android:layout_height="45dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_face_lin4"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/bmw_guide"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageView" />

        <TextView
            android:textColor="#2298e7"
            android:gravity="center"
            android:textSize="12sp"
            android:text="我的"
            android:layout_width="45dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_face_lin5"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/bmw_learn"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:textColor="#2298e7"
            android:gravity="center"
            android:textSize="12sp"
            android:text="音乐"
            android:layout_width="45dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
